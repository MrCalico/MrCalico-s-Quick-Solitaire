@page "/QuickSolitaire"
@inherits QuickSolitaireBase;
<style>

    .my-container {
        border: 1px solid green;
    }

    .my-row {
        border: 3px solid red;
    }

    .my-col {
        border: 3px solid blue;
    }
</style>
<h3>QuickSolitaire</h3>

<div class="container">
    <div class="row my-row">
        <div class="col-1 my-col">ACES</div>
        <div class="col my-col">Col 1</div>
        <div class="col my-col">Col 2</div>
        <div class="col my-col">Col 3</div>
        <div class="col my-col">Col 4</div>
    </div>
    <div class="row my-row">
        <div class="col-1 my-col">KINGS</div>
        <div class="col my-col">Col 1</div>
        <div class="col my-col">Col 2</div>
        <div class="col my-col">Col 3</div>
        <div class="col my-col">Col 4</div>
    </div>
</div>


<div class="justify-content-center">
    @lastCard.ToString() : : : @(currentCard)
</div>

<br/>
<div class="justify-content-center"><button @onclick="()=>draw()">Draw Next</button></div>